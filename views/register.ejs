<style>
    #register{
            color: white;
            background-color: transparent;
            position: absolute;
            top: 50%;
            left: 50%;
            margin-right: -50%;
            transform: translate(-50%, -50%) 
        }
        h1{
            text-align: center;
            color: white;
            margin-bottom: 40px;
        }
        .form-group{
            min-width: 300px;
        }
        .form-group:hover{
            transform: scale(1.05);
            transition: .6s all ease;
        }
        #registerBtn{
            margin-top: 30px;
            letter-spacing: 1.5px; 
            color: white;
            overflow: hidden;
            border-radius: 40px;
            transition: .6s all ease;
        }
        #registerBtn:hover{
            transform: scale(1.1);
        }
        #loginHelp a{
            color: white;
        }
</style>
<%- include ('partials/messages') %>
<form id="register" action="/users/register" method="POST">
    <h1>REGISTER</h1>

    <fieldset>
       <div class="form-group">
        <label for="exampleInputEmail1">Name</label>
        <input type="name" value= "<%= typeof name != 'undefined' ? name: ''%>" class="form-control" id="exampleInputName1" aria-describedby="nameHelp" placeholder="Enter Name" name="name">
      </div>  
      <div class="form-group">
        <label for="exampleInputEmail1">Email Address</label>
        <input type="email" value= "<%= typeof email != 'undefined' ? email: ''%>" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Email" name="email">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" value= "<%= typeof password != 'undefined' ? password: ''%>" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password">
        <small id="loginHelp" class="form-text text-muted">Have an account? Sign in <a href="/users/login">here</a>.</small>
      </div>
      <button id="registerBtn"type="submit" class="btn btn-primary">Sign Up</button>
    </fieldset>
</form>