    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootswatch/4.5.0/lux/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
    <style>
        body{
        background-image: linear-gradient(to right,#8E2DE2, #4A00E0);
        position: relative;
        min-height: 100vh;
        }
        footer{
        position: absolute;
        left: 32%;
        bottom: 1%;
        width: 100%;
        color: white;
        letter-spacing: 1px;
        }
        footer span{
        color: black;
        }
        .bubble{
        position: absolute;
        bottom: 0;
        width: 40px;
        height: 40px;
        background: white;
        border-radius: 50%;
        opacity: .5;
        animation: flying 1s infinite ease-in;
        }
        .bubble:nth-child(1){
            width: 40px;
            height: 40px;
            left: 10%;
            animation-duration: 8s;
        }
        .bubble:nth-child(2){
            width: 20px;
            height: 20px;
            left: 20%;
            animation-duration: 5s;
            animation-delay: 1s;
        }
        .bubble:nth-child(3){
            width: 50px;
            height: 50px;
            left: 35%;
            animation-duration: 10s;
            animation-delay: 2s;
        }
        .bubble:nth-child(4){
            width: 80px;
            height: 80px;
            left: 50%;
            animation-duration: 7s;
            animation-delay: 0s;
        }
        .bubble:nth-child(5){
            width: 45px;
            height: 45px;
            left: 65%;
            animation-duration: 8s;
            animation-delay: 3ms;
        }
        .bubble:nth-child(6){
            width: 35px;
            height: 35px;
            left: 55%;
            animation-duration: 6s;
            animation-delay: 1ms;
        }
        .bubble:nth-child(7){
            width: 25px;
            height: 25px;
            left: 75%;
            animation-duration: 7s;
            animation-delay: 2ms;
        }
        .bubble:nth-child(8){
            width: 80px;
            height: 80px;
            left: 80%;
            animation-duration: 6s;
            animation-delay: 1ms;
        }
        .bubble:nth-child(9){
            width: 15px;
            height: 15px;
            left: 70%;
            animation-duration: 9s;
            animation-delay: 0ms;
        }
        .bubble:nth-child(10){
            width: 50px;
            height: 50px;
            left: 85%;
            animation-duration: 5s;
            animation-delay: 3ms;
        }
        .bubble:nth-child(11){
            width: 40px;
            height: 40px;
            left: 10%;
            animation-duration: 8s;
        }
        .bubble:nth-child(12){
            width: 20px;
            height: 20px;
            left: 20%;
            animation-duration: 5s;
            animation-delay: 1s;
        }

        @keyframes flying{
            0%{
                bottom: -100px;
                transform: translateX(0);
            }
            50%{
                transform: translateX(100px);
            }
            100%{
                bottom: 1080px;
                transform: translateX(-200px);
            }
        }
        
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="/" style="letter-spacing: 1px;">CourseBook&trade;</a>
